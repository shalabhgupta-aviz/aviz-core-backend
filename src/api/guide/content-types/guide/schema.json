{
  "kind": "collectionType",
  "collectionName": "guides",
  "info": {
    "singularName": "guide",
    "pluralName": "guides",
    "displayName": "Guide",
    "description": "Guides and documentation from WordPress with download capabilities"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "wp_id": {
      "type": "integer",
      "unique": true,
      "required": true
    },
    "title": {
      "type": "component",
      "repeatable": false,
      "component": "shared.title"
    },
    "slug": {
      "type": "string",
      "required": true
    },
    "excerpt": {
      "type": "component",
      "repeatable": false,
      "component": "shared.excerpt"
    },
    "content": {
      "type": "component",
      "repeatable": false,
      "component": "shared.content"
    },
    "post_url": {
      "type": "string"
    },
    "date": {
      "type": "datetime"
    },
    "modified": {
      "type": "datetime"
    },
    "status": {
      "type": "enumeration",
      "enum": ["publish", "draft", "private"],
      "default": "publish"
    },
    "featured_images": {
      "type": "json"
    },
    "meta": {
      "type": "json"
    },
    "categories": {
      "type": "json"
    },
    "tags": {
      "type": "json"
    },
    "author": {
      "type": "json"
    },
    "download_url": {
      "type": "string",
      "description": "URL for downloading the guide"
    },
    "file_size": {
      "type": "string"
    },
    "pages": {
      "type": "integer"
    },
    "guide_type": {
      "type": "enumeration",
      "enum": ["technical", "business", "whitepaper", "ebook", "datasheet"],
      "default": "technical"
    },
    "acf_fields": {
      "type": "json"
    },
    "seo_title": {
      "type": "string"
    },
    "seo_description": {
      "type": "text"
    },
    "featured_media": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images", "files"]
    },
    "download_file": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["files"]
    }
  }
} 